{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "number-leading-zero": "never",
    "order/properties-order": [
      "content",

      "position",
      "z-index",
      "top",
      "right",
      "bottom",
      "left",
      "float",
      "clear",

      "display",
      "justify-content",
      "align-items",

      "box-sizing",
      "overflow",
      "width",
      "height",
      "margin",
      "box-shadow",
      "border",
      "border-radius",
      "padding",

      "background",
      "opacity",
      "cursor",

      "font-size",
      "line-height",
      "font-family",
      "font-weight",
      "font-style",
      "text-align",
      "text-transform",
      "word-spacing",
      "color",

      "transition",
      "animation"
    ]
  }
}
